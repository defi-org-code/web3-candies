{
  "name": "web3-extensions",
  "version": "1.0.0",
  "description": "Common utilities for web3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-org-code/web3-extensions.git"
  },
  "author": "defi.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/defi-org-code/web3-extensions/issues"
  },
  "homepage": "https://github.com/defi-org-code/web3-extensions#readme",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src/**"
  ],
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.1.0",
    "@typechain/hardhat": "^2.0.1",
    "@typechain/web3-v1": "^3.0.0",
    "@types/bn.js": "^4.11.6",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.0.0",
    "@types/prompts": "^2.0.12",
    "bn.js": "^4.12.0",
    "hardhat": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "lodash": "^4.17.21",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.11",
    "prompts": "^2.4.1",
    "solhint": "^3.3.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2",
    "web3": "^1.3.6",
    "web3-parse-receipt-events": "^1.0.2",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "chai-bn": "git+https://github.com/defi-org-code/chai-bn.git",
    "mocha": "^8.4.0"
  },
  "scripts": {
    "prettier": "prettier --write '{test,src,contracts,scripts}/**/*.{ts,js,json,sol}'",
    "typechain": "typechain --target=web3-v1 --out-dir=typechain-abi 'abi/**/*.json' && npx hardhat typechain",
    "prebuild": "rm -rf artifacts && rm -rf typechain-hardhat && rm -rf typechain-abi && npm run prettier && npm run typechain",
    "build": "npx hardhat compile && npx solhint 'contracts/**/*.sol'",
    "test": "npm run build && npx hardhat test --logs",
    "deploy": "npx hardhat deploy --network $1"
  },
  "prettier": {
    "printWidth": 120
  }
}
