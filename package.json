{
  "name": "@defi.org/web3-candies",
  "version": "2.2.0",
  "description": "Common utilities for web3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-org-code/web3-candies.git"
  },
  "author": "defi.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/defi-org-code/web3-candies/issues"
  },
  "homepage": "https://github.com/defi-org-code/web3-candies#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "abi",
    "dist",
    "typechain-abi",
    ".solhint.json",
    "tsconfig.json",
    "hardhat.config.ts"
  ],
  "dependencies": {
    "@openzeppelin/contracts": "4.x",
    "@typechain/web3-v1": "3.x",
    "@types/bn.js": "5.x",
    "@types/chai": "4.x",
    "@types/mocha": "8.x",
    "@types/lodash": "4.x",
    "bn.js": "5.x",
    "chai": "4.x",
    "chai-bn": "0.x",
    "lodash": "4.x",
    "mocha": "9.x",
    "prettier": "2.x",
    "prettier-plugin-solidity": "latest",
    "solhint": "3.x",
    "ts-generator": "0.1.x",
    "typechain": "5.x",
    "typescript": "4.x",
    "web3": "1.x",
    "web3-parse-receipt-events": "1.x"
  },
  "optionalDependencies": {
    "@nomiclabs/hardhat-etherscan": "2.x",
    "@nomiclabs/hardhat-web3": "2.x",
    "@typechain/hardhat": "2.x",
    "@types/fs-extra": "9.x",
    "@types/node": "14.x",
    "@types/node-fetch": "2.x",
    "@types/prompts": "2.x",
    "fs-extra": "10.x",
    "node-fetch": "2.x",
    "ts-node": "10.x",
    "prompts": "2.x",
    "hardhat": "2.x",
    "hardhat-gas-reporter": "1.x",
    "hardhat-tracer": "latest"
  },
  "scripts": {
    "prettier": "prettier --write '{contracts,src,test}/**/*.{ts,js,json,sol}'",
    "typechain": "typechain --target=web3-v1 --out-dir=typechain-abi 'abi/**/*.json' && npx hardhat typechain",
    "prebuild": "rm -rf artifacts dist && npm run prettier && npm run typechain",
    "build": "npx hardhat compile && npx solhint 'contracts/**/*.sol' && tsc && cp -r src/hardhat/types dist/hardhat/types",
    "test": "npm run build && npx hardhat test --logs",
    "deploy": "npx hardhat deploy --network $1",
    "upload": "npm publish --access public"
  },
  "prettier": {
    "printWidth": 180
  }
}
