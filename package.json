{
  "name": "web3-extensions",
  "version": "1.0.0",
  "description": "Common utilities for web3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-org-code/web3-extensions.git"
  },
  "author": "defi.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/defi-org-code/web3-extensions/issues"
  },
  "homepage": "https://github.com/defi-org-code/web3-extensions#readme",
  "main": "dist-temp/index.js",
  "types": "dist-temp/index.d.ts",
  "files": [
    "abi",
    "dist-temp",
    "typechain-abi",
    ".solhint.json",
    "tsconfig.json",
    "hardhat.config.ts"
  ],
  "peerDependencies": {
    "@nomiclabs/hardhat-etherscan": "2.x",
    "@nomiclabs/hardhat-web3": "2.x",
    "@openzeppelin/contracts": "4.x",
    "@typechain/hardhat": "2.x",
    "@typechain/web3-v1": "3.x",
    "@types/bn.js": "4.x",
    "@types/chai": "4.x",
    "@types/lodash": "4.x",
    "@types/mocha": "8.x",
    "@types/node": "15.x",
    "@types/prompts": "2.x",
    "bn.js": "4.x",
    "chai": "4.x",
    "chai-bn": "git+https://github.com/defi-org-code/chai-bn.git",
    "hardhat": "2.x",
    "hardhat-gas-reporter": "1.x",
    "hardhat-tracer": "*",
    "lodash": "4.x",
    "mocha": "8.x",
    "prettier": "2.x",
    "prettier-plugin-solidity": "*",
    "prompts": "2.x",
    "solhint": "3.x",
    "ts-generator": "0.x",
    "ts-node": "10.x",
    "typechain": "5.x",
    "typescript": "4.x",
    "web3": "1.x",
    "web3-parse-receipt-events": "1.x"
  },
  "scripts": {
    "prettier": "prettier --write '{contracts,src,test}/**/*.{ts,js,json,sol}'",
    "typechain": "typechain --target=web3-v1 --out-dir=typechain-abi 'abi/**/*.json' && npx hardhat typechain",
    "prebuild": "rm -rf artifacts && rm -rf typechain-hardhat && rm -rf typechain-abi && npm run prettier && npm run typechain",
    "build": "npx hardhat compile && npx solhint 'contracts/**/*.sol' && tsc",
    "test": "npm run build && npx hardhat test --logs",
    "deploy": "npx hardhat deploy --network $1"
  },
  "prettier": {
    "printWidth": 120
  }
}
